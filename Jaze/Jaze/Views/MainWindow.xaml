        </Grid>
        <!--  Right Pnael  -->
        <Grid Grid.Row="0" Grid.Column="1" Margin="0,5,5,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--  Dictionary & Tool Area  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <!--  List Dictionary  -->
                <control:ListDictionary x:Name="listDictionary" />
                <!--  Utilities Area  -->
                <Border Grid.Column="1" Margin="5,0,0,0" BorderThickness="0.5" BorderBrush="Gray">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="FontSize" Value="11" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                            </Style>
                            <Style TargetType="Image">
                                <Setter Property="Height" Value="Auto" />
                                <Setter Property="Width" Value="Auto" />
                            </Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
                                <Setter Property="Margin" Value="3" />
                                <Setter Property="Width" Value="50" />
                            </Style>
                        </StackPanel.Resources>
                        <Button ToolTip="Danh sách từ đã đánh dấu."
                                Visibility="Collapsed">
                            <StackPanel VerticalAlignment="Center">
                                <Image Source="../Assets/list_bookmark.png" />
                                <TextBlock Text="Bookmark" />
                            </StackPanel>
                        </Button>
                        <Button ToolTip="Danh sách kanji theo chuẩn JLPT."
                                Visibility="Collapsed">
                            <StackPanel VerticalAlignment="Center">
                                <Image Source="../Assets/book.png" />
                                <TextBlock Text="JLPT" />
                            </StackPanel>
                        </Button>
                        <Button ToolTip="Cài đặt.">
                            <StackPanel VerticalAlignment="Center">
                                <Image Source="../Assets/setting2.png" />
                                <TextBlock Text="Option" />
                            </StackPanel>
                        </Button>
                        <Button ToolTip="Thông tin phần mềm.">
                            <StackPanel VerticalAlignment="Center">
                                <Image Source="../Assets/about.png" />
                                <TextBlock Text="About" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>


            </Grid>
            <!--  Splitter  -->
            <GridSplitter Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="5" />
            <!--  Toolbar Area  -->
            <StackPanel Grid.Row="1" Margin="0,5,0,0" Orientation="Horizontal">
                <Button BorderThickness="2" Margin="5,0,5,0" Click="ButtonCopyShowingModel_OnClick">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../Assets/copy.png" Height="16" />
                        <TextBlock>Copy</TextBlock>
                    </StackPanel>
                </Button>
                <Button BorderThickness="2" Margin="0,0,5,0" Content="Seach" Click="ButtonSearchSuggest_OnClick" Name="ButtonSearchSuggest"/>
                <Popup PlacementTarget="{Binding ElementName=ButtonSearchSuggest}" Name="PopupSearchSuggest" StaysOpen="False" AllowsTransparency="False" Placement="Bottom">
                    <Border BorderBrush="DarkGray" BorderThickness="1" Padding="5" Background="White">
                        <TextBlock >
                            <TextBlock.Inlines>
                                <Hyperlink Click="HyperlinkSearchWordStartWith_OnClick">
                                    <Hyperlink.Inlines>
                                        <Underline>
                                            <Run Text="Word start with:" ></Run>
                                        </Underline>
                                        <Run Text="{Binding ElementName=flowDoc, Path=Tag.Word}"></Run>
                                    </Hyperlink.Inlines>
                                </Hyperlink>
                                <LineBreak></LineBreak>
                                <Hyperlink Click="HyperlinkSearchWordContain_OnClick">
                                    <Hyperlink.Inlines>
                                        <Underline>
                                            <Run Text="Word contain:"></Run>
                                        </Underline>
                                        <Run Text="{Binding ElementName=flowDoc, Path=Tag.Word}"></Run>
                                    </Hyperlink.Inlines>
                                </Hyperlink>
                                <LineBreak></LineBreak>
                                <Hyperlink Click="HyperlinkSearchWordEndWith_OnClick">
                                    <Hyperlink.Inlines>
                                        <Underline>
                                            <Run Text="Word end with:"></Run>
                                        </Underline>
                                        <Run Text="{Binding ElementName=flowDoc, Path=Tag.Word}"></Run>
                                    </Hyperlink.Inlines>
                                </Hyperlink>
                            </TextBlock.Inlines>
                        </TextBlock>
                    </Border>
                </Popup>
                <Button BorderThickness="2" Margin="0,0,5,0" Content="Part" Click="ButtonPart_OnClick" />
                <Button BorderThickness="2" Margin="0,0,5,0" Content="Is Part Of" Click="ButtonPartOf_OnClick" />
                <TextBox HorizontalAlignment="Stretch" Width="200"></TextBox>
            </StackPanel>
            <!--  Result Area  -->
            <telerik:RadBusyIndicator Name="loadingIndicator"
                                      Grid.Row="2"
                                      Margin="0,5,0,0"
                                      BusyContent="Đang lấy dữ liệu" IsIndeterminate="True">
                <Grid>
                    <Popup Name="MenuPopup" StaysOpen="False" AllowsTransparency="False" VerticalOffset="5"
                           IsOpen="False"
                           Placement="MousePoint">
                        <StackPanel Height="30" Orientation="Horizontal">
                            <Button Click="ButtonCopySelectedText_OnClick">
                                <Image Source="../Assets/copy.png" />
                            </Button>
                            <Button Click="ButtonQuickView_OnClick">
                                <Image Source="../Assets/find.png" />
                            </Button>
                        </StackPanel>
                    </Popup>
                    <Popup Name="QuickViewPopup" StaysOpen="False" AllowsTransparency="False" VerticalOffset="5"
                           IsOpen="False"
                           Placement="MousePoint" />
                    <FlowDocumentReader Name="flowDoc"
                                        FontWeight="Normal"
                                        IsInactiveSelectionHighlightEnabled="True" ViewingMode="Scroll"
                                        Zoom="120" />
                </Grid>


            </telerik:RadBusyIndicator>
        </Grid>
        <!--slider-->
        <GridSplitter Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="5" />
        <!--  Status bar  -->
        <StatusBar Grid.Row="2" Grid.ColumnSpan="2"
                   HorizontalAlignment="Stretch">
            <TextBlock Name="textBlockStatus" Text="Loading" />
        </StatusBar>
    </Grid>
</Window>