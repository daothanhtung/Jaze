        </Grid>
        <!--  Right Pnael  -->
        <Grid Grid.Row="0" Grid.Column="1" Margin="0,5,5,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--  Dictionary & Tool Area  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <!--  List Dictionary  -->
                <control:ListDictionary x:Name="listDictionary" />
                <!--  Utilities Area  -->
                <Border Grid.Column="1" Margin="5,0,0,0"  BorderThickness="0.5" BorderBrush="Gray">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                <Setter Property="FontSize" Value="11"></Setter>
                                <Setter Property="FontWeight" Value="SemiBold"></Setter>
                            </Style>
                            <Style TargetType="Image">
                                <Setter Property="Height" Value="Auto"></Setter>
                                <Setter Property="Width" Value="Auto"></Setter>
                            </Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
                                <Setter Property="Margin" Value="3"></Setter>
                                <Setter Property="Width" Value="50"></Setter>
                            </Style>
                        </StackPanel.Resources>
                        <Button ToolTip="Danh sách từ đã đánh dấu." 
                                Visibility="Collapsed">
                            <StackPanel VerticalAlignment="Center">
                                <Image Source="../Assets/list_bookmark.png"></Image>
                                <TextBlock Text="Bookmark" ></TextBlock>
                            </StackPanel>
                        </Button>
                        <Button ToolTip="Danh sách kanji theo chuẩn JLPT."
                                Visibility="Collapsed">
                            <StackPanel VerticalAlignment="Center">
                                <Image Source="../Assets/book.png"></Image>
                                <TextBlock Text="JLPT" ></TextBlock>
                            </StackPanel>
                        </Button>
                        <Button ToolTip="Cài đặt.">
                            <StackPanel VerticalAlignment="Center">
                                <Image Source="../Assets/setting2.png"></Image>
                                <TextBlock Text="Option" ></TextBlock>
                            </StackPanel>
                        </Button>
                        <Button ToolTip="Thông tin phần mềm.">
                            <StackPanel VerticalAlignment="Center">
                                <Image Source="../Assets/about.png"></Image>
                                <TextBlock Text="About" ></TextBlock>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
                
                    
            </Grid>
            <!--  Splitter  -->
            <GridSplitter Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="5"></GridSplitter>
            <!--  Toolbar Area  -->
            <StackPanel Grid.Row="1" Margin="0,5,0,0" Orientation="Horizontal">
                <Button BorderThickness="2" Margin="5,0,5,0" Click="ButtonCopy_OnClick">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../Assets/copy.png" Height="16"></Image>
                        <TextBlock>Copy</TextBlock>
                    </StackPanel>
                </Button>
                <Button BorderThickness="2" Margin="0,0,5,0" Content="Search"/>
                <Button BorderThickness="2" Margin="0,0,5,0" Content="Part" Click="ButtonPart_OnClick"/>
                <Button BorderThickness="2" Margin="0,0,5,0" Content="Part Of" Click="ButtonPartOf_OnClick"/>
            </StackPanel>
            <!--  Result Area  -->
            <telerik:RadBusyIndicator Name="loadingIndicator"
                                      Grid.Row="2"
                                      Margin="0,5,0,0"
                                      BusyContent="Đang lấy dữ liệu" IsIndeterminate="True">
                <FlowDocumentReader Name="flowDoc"
                                    FontWeight="Normal"
                                    IsInactiveSelectionHighlightEnabled="True" ViewingMode="Scroll"
                                    Zoom="120"/>
            </telerik:RadBusyIndicator>
        </Grid>
        <!--slider-->
        <GridSplitter Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="5"></GridSplitter>
        <!--  Status bar  -->
        <StatusBar Grid.Row="2" Grid.ColumnSpan="2"
                   HorizontalAlignment="Stretch">
            <TextBlock Name="textBlockStatus" Text="Loading" />
        </StatusBar>
    </Grid>
