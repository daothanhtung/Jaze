            <!--  Button input  -->
            <Button Grid.Row="0" Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                    Content="..." FontSize="15"
                    FontStretch="ExtraExpanded" />
