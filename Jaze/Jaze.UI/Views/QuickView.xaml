    <tk:BusyIndicator IsBusy="{Binding IsLoading}">
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding ItemDocuments}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="FlowDocument">
                        <RichTextBox helper:RichTextBoxHelper.Document="{Binding}" VerticalScrollBarVisibility="Disabled" IsReadOnly="True" IsDocumentEnabled="True" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </tk:BusyIndicator>
</UserControl>