<UserControl
    x:Class="Jaze.UI.Views.ItemDisplayView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="clr-namespace:Jaze.UI.Helper"
    xmlns:local="clr-namespace:Jaze.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="300"
    d:DesignWidth="300"
    DataContext="{Binding Source={StaticResource Locator}, Path=ItemDisplay}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="{x:Type Hyperlink}">
            <Setter Property="TextBlock.TextDecorations" Value="{x:Null}" />
            <Setter Property="Command" Value="{Binding HyperlinkClickCommand}" />
            <Setter Property="CommandParameter" Value="{Binding RelativeSource={RelativeSource Self}}" />
        </Style>
    </UserControl.Resources>
    <tk:BusyIndicator IsBusy="{Binding IsLoading}">
        <FlowDocumentScrollViewer helper:RichTextBoxHelper.Document="{Binding ItemDocument}" IsToolBarVisible="True" />
    </tk:BusyIndicator>
</UserControl>